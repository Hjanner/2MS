{
  "appId": "com.morela.2ms",
  "productName": "Morela's Management System",
  "directories": {
    "output": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "backend",
      "to": "backend",
      "filter": ["**/*", "!**/__pycache__", "!**/*.pyc", "!**/venv", "!**/.env"]
    },
    {
      "from": "database",
      "to": "database",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": "nsis"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  },
  "asar": false
}